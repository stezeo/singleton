"""
# this code restricts creation more than one instance of a class

"""
class restrictDouble():
    # Here will be the instance stored.
    __instance = None
	

    def __init__(self):
        """ Virtually private constructor. """
        if restrictDouble.__instance != None:
            raise Exception("This class is a singleton!")
        else:
            restrictDouble.__instance = self

		
		

		
# A little testing first comment s2 and print(s2) then uncomment

s = restrictDouble() # Ok
s2=restrictDouble() #Singleton() # will raise exception

print (s)
print(s2) #Singleton() # will raise exception
